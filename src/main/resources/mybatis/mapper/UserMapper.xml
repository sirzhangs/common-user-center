<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sirzhangs.usercenter.mapper.UserMapper">

	<sql id="base_cloumn">
		id, login_account, user_passwordï¼Œuser_name,telephone,email,
		auth_status,user_type, real_name,card_num,account_type
	</sql>

	<insert id="add"
		parameterType="com.sirzhangs.usercenter.entity.User">
		INSERT INTO uc_user(id, login_account,
		user_password,user_name,telephone,email, auth_status,user_type,
		real_name,card_num,account_type)
		VALUES(#{id}, #{loginAccount},
		#{userPassword},#{userName},#{telephone},#{email},
		#{authStatus},#{userType}, #{realName},#{cardNum},#{accountType})
	</insert>

	<delete id="delete">
		DELETE FROM uc_user
		WHERE id IN
		<foreach collection="ids" item="id" separator="," open="("
			close=")">
			#{id}
		</foreach>
	</delete>

	<select id="findById">
		SELECT
		<include refid="base_cloumn" />
		FROM uc_user
		WHERE id = #{id}
	</select>

	<select id="findList">
		select
		<include refid="base_cloumn" />
		from uc_user
		<where>
			<if test="userType != null"> user_type = #{userType}</if>
			<if test="authStatus != null">auth_statsu = #{authStatus}</if>
		</where>
	</select>

</mapper>